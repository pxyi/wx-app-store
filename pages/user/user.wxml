<view class='head'> 
  <view class='head-image'>
    <image mode='widthFix' src='{{userInfo.avatarUrl}}'></image>
  </view>

  <view class='head-name'>{{userInfo.nickName || '默认昵称'}}</view>
  <view class='head-phone'>{{userphone}}</view>
</view>


<view class='container' >

  <view class='header' wx:if='{{tongMember}}'>
    <view>
      <text>{{totalTimes}}</text>
      <text>总卡次</text>
    </view>
    <view>
      <text>{{remainTimes}}</text>
      <text>剩余总数</text>
    </view>
    <view>
      <text>{{remainTong}}</text>
      <text>通卡剩余</text>
    </view>
  </view>

  <view class='activity-banner' hover-class='tap-active'>
    <image mode='widthFix' src='/assets/images/user/activity-banner.png'></image>
  </view>

  <view class='tab-box'>
    <view class='item' hover-class='active'><navigator url="/pages/user/coupon/coupon" hover-class="none">我的卡券</navigator></view>
    <view class='item' hover-class='active'><navigator url="/pages/user/prize/prize" hover-class="none">我的奖品</navigator></view>
  </view>
</view>

<view class='footer'>
  <view class='footer-phone' bindtap='makePhone' data-num='400-6321531'>客服电话：400-6321531</view>
  <view class='footer-time'>客服时间：09:00 - 18:00 周一至周日</view>
</view>