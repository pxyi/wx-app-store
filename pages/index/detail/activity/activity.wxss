
.header{
  padding: 0 30rpx 33rpx;
  background: #fff;
  position: relative;

  border-bottom: solid 20rpx rgb(240, 240, 240);
}
.head-title{
  padding: 42rpx 100rpx 19rpx 0;
  font-size: 31rpx;
  line-height: 44rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.head-title view{
    display: inline-block;
    margin-left: 20rpx;
}
.head-detail{
  color: RGBA(153, 153, 153, 1);
  font-size: 24rpx;
  line-height: 24rpx;

}
.head-detail text{
  width: 90rpx;
  height: 40rpx;
  background: #FFF5F5;
  color:#FF1F52;
  font-size: 20rpx;
  float: left;
  text-align: center;
  line-height: 40rpx; 
  margin-right: 20rpx;
  border-radius: 10px;
}
.head-cover{

  height: 391rpx;
  overflow: hidden;

}
.head-cover image{
  width: 701rpx;
  height: 391rpx;
  display: block;
  margin: 0 auto;
}
.head-price{
  padding-top: 30rpx;
  overflow: hidden;
  clear: both;
}
.head-price view{
  float: left;
}
.head-price view:first-child{
  font-size: 36rpx;
  line-height: 36rpx;
  margin-right: 26rpx;
  color: #FF1F52;
}
.head-price view:last-child{
  height: 36rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 46rpx;
  text-decoration: line-through;
}
.head-label{
  padding: 0 14rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  background: #FF1F52;

} 

.detail{
  padding: 0 30rpx;
  background: #fff;
  border-bottom: solid 20rpx rgb(240, 240, 240);
}
.detail:last-child{
   padding: 0 30rpx;
  border-bottom:none; 
}
.detail-title{
  padding: 40rpx 0 30rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  border-bottom: solid 1px rgba(238,238,238,1);
}
.detail-content{
  padding-top: 17rpx;
  padding-bottom: 20px;
}

.detail-item{
  color: #63686e;
  font-size: 26rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.item-label{
  float: left;
  width: 130rpx;
}

.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
}
.btn-info{
  height: 100rpx;
  color: #FF1F52;
  font-size: 26rpx;
  line-height: 100rpx;
  text-indent: 36rpx;
  border-top: solid 1px RGBA(238, 238, 238, 1);
  box-sizing: border-box;
  background: #fff;
  font-weight: bold;
}
.btn-info text{
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-left: 15rpx;
  text-decoration: line-through;
}
.footer-btn{
  width: 200rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: center;
  background: RGBA(255, 131, 154, 1);
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 9;
}
.footer-btn.active{
  background: #fba0b1;
}

.bottoms{
  width: 100%;
  text-align: center;
  padding: 50rpx 0 140rpx 0;
  background: rgb(240, 240, 240);
}
.footer-phone{
   color: rgb(150, 150, 150);
  font-size: 26rpx;
  line-height: 36rpx;

}
.footer-time{
  color: rgb(150, 150, 150);
  font-size: 23rpx;
  line-height: 23rpx;
  padding-top: 15rpx;
}
.share{
    width: 50rpx;
  height: 50rpx;
  position:absolute;
  top: 30rpx;
  right: 33rpx;
  background: url(https://ylbb-business.oss-cn-beijing.aliyuncs.com/scaiop563255225.png) no-repeat  center 18rpx;
  background-size:33rpx 33rpx;
  text-align: center;
  font-size: 24rpx;
  color: #AAA; 
  line-height: 150rpx;
}