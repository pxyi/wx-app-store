/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
}
.landing{
  width: 500rpx;
  margin: 0 auto;
}
.login_header{
  width: 100%;
  height: 606rpx;
   background: url(http://ylbb-business.oss-cn-beijing.aliyuncs.com/loginbg.png) no-repeat;
  background-size:100% 100%;  
  clear: both;
  margin:0;
}
.login_icon{
  width: 100%;
  height: 106rpx;
  text-align: center;
  padding-top: 134rpx;
}
.login_icon image{
  width: 136rpx;
  height: 106rpx;
  margin: 0 auto;
}
.login_tit{
  font-size: 60rpx;
  text-align: center;
  margin-top: 40rpx;
  color: #fff;
}
.form_text{
  width: 580rpx;
  margin: 0 auto;
  margin-top: 74rpx;
  padding-bottom: 20px;
}
.form_text view{
  width: 580rpx;
  height: 50rpx;
  padding: 16rpx 0;
  font-size: 36rpx;
  border-bottom: solid 1px #CCCCCC;
}
.form_text view:nth-child(2){
  margin-top: 29rpx;
}

.form_text input{
  width: 494rpx;
  float: right;
}
.form_text button{
  background: #5EA3FE;
  width: 580rpx;
  height: 96rpx;
  border-radius: 95rpx;
  font-size: 44rpx;
  line-height: 96rpx;
  margin-top: 70rpx;
  box-shadow: 5rpx 10rpx 5rpx RGBA(94, 163, 254, 0.3);
}
.form_text button.cli{
  background: #00bfff;
}
.form_text view image{
  width: 38rpx;
  height: 36rpx;
  padding-top: 7rpx;
  padding-left: 26rpx;
  float: left;
}